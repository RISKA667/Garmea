# Configuration de l'API Garméa
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Application
APP_NAME=Garméa
DEBUG=false
VERSION=2.0.0

# Sécurité
JWT_SECRET_KEY=votre-cle-secrete-tres-longue-et-complexe-pour-la-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Base de données (SQLite par défaut pour le développement)
DATABASE_URL=sqlite:///./garmea.db

# Cache Redis (optionnel pour le développement)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_HOURS=24

# Sécurité réseau
ALLOWED_HOSTS=localhost,127.0.0.1,*.garmedoc.fr
CORS_ORIGINS=http://localhost:3000,https://garmedoc.fr

# Fichiers
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/garmea.log

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Serveur
HOST=0.0.0.0
PORT=8000
RELOAD=true 